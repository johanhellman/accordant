# OpenRouter API Key (Required)
# Get your API key at https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-...

# Alternative: Use LLM_API_KEY if you're using a different provider
# LLM_API_KEY=sk-or-v1-...

# Alternative: Use LLM_API_URL if you're using a different provider
# LLM_API_URL=https://openrouter.ai/api/v1/chat/completions



# Chairman Model (Optional)
# Model to synthesize the final response
# WARNING: Setting this overrides the selection made in the UI (System Prompts > Chairman Model).
# Leave commented out to allow UI configuration.
# CHAIRMAN_MODEL=gemini/gemini-2.5-pro

# Title Generation Model (Optional)
# Model to generate conversation titles
# WARNING: Setting this overrides the selection made in the UI (System Prompts > Title Generation Model).
# Leave commented out to allow UI configuration.
# TITLE_GENERATION_MODEL=gemini/gemini-2.5-pro

# Personality Configuration (Optional)
# Path to personalities directory
# COUNCIL_PERSONALITIES_DIR=data/personalities

# Active Personalities (Optional)
# Comma-separated list or JSON array of personality IDs to use
# WARNING: Setting this overrides the "Enabled" status set in the UI (Personalities).
# Leave commented out to allow UI configuration (enabled/disabled status).
# COUNCIL_PERSONALITIES_ACTIVE=personality1,personality2

# Performance Configuration (Optional)
# Maximum number of concurrent API requests (Default: 4)
# MAX_CONCURRENT_REQUESTS=4

# Timeout for each API request in seconds (Default: 180.0)
# LLM_REQUEST_TIMEOUT=180.0

# Number of retries for failed requests (Default: 3)
# LLM_MAX_RETRIES=3

# Logging Configuration (Optional)
# Logging Level (Default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# Log Directory (Default: logs)
# LOG_DIR=logs

# Log File (Default: logs/llm_council.log)
# LOG_FILE=logs/llm_council.log

# Log Retention Days (Default: 30)
# LOG_RETENTION_DAYS=30

# CORS Configuration (Optional)
# Comma-separated list of allowed origins (Default: http://localhost:5173,http://localhost:3000)
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# CORS Methods (Default: *)
# CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS Headers (Default: *)
# CORS_HEADERS=*

# CORS Credentials (Default: true)
# CORS_CREDENTIALS=true
